<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7065E4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_black"
            android:padding="@dimen/_8sdp"
            android:text="Doctor Appointment Book"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/_20sdp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:orientation="vertical"
        android:paddingTop="@dimen/_15sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imvCircular"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"
            app:shapeAppearanceOverlay="@style/Circular_One" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="#B0B3C7" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_black"
            android:paddingLeft="@dimen/_15sdp"
            android:text="Name"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="#262C3D"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/avenir_book"
            android:paddingLeft="@dimen/_15sdp"
            android:text="Name"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="#747F9E"
            android:textSize="@dimen/_15sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="#B0B3C7" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7sdp"
            android:layout_weight="0.7"
            android:background="@android:color/transparent"
            android:padding="2dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:src="@drawable/doctor_5" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/avenir_black"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Amount"
                    android:textColor="#7065E4"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="#B0B3C7" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/avenir_book"
            android:paddingLeft="@dimen/_15sdp"
            android:text="Name"
            android:textColor="#747F9E"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/userphoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/avenir_book"
            android:paddingLeft="@dimen/_15sdp"
            android:text="Phone no"
            android:textColor="#747F9E"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/useremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/avenir_book"
            android:paddingLeft="@dimen/_15sdp"
            android:text="Email"
            android:textColor="#747F9E"
            android:textSize="@dimen/_15sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="#B0B3C7" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/doctor_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/button_shape_doctor"
                android:fontFamily="@font/avenir_black"
                android:layout_weight="1"
                android:padding="@dimen/_4sdp"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="@color/app_white"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/doctor_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/button_shape_doctor"
                android:layout_weight="1"
                android:fontFamily="@font/avenir_black"
                android:padding="@dimen/_4sdp"
                android:text="Time"
                android:textAlignment="center"
                android:textColor="@color/app_white"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="#B0B3C7" />

        <TextView
            android:id="@+id/book_now_doctor_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/button_shape_doctor"
            android:fontFamily="@font/avenir_black"
            android:padding="@dimen/_6sdp"
            android:text="Book Now"
            android:textAlignment="center"
            android:textColor="@color/app_white"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>

</RelativeLayout>